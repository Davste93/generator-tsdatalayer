{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "build"
    },
    "filesGlob": [
        "app.ts",
        "models/**.ts",
        "ApiResponseParsers/**.ts",
        "Auth/**.ts",
        "data/**.ts",
        "services/**.ts",
        "spec/**/*.ts",
        "typings/index.d.ts",
        "customTypings/typings.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "app.ts",
        "ApiResponseParsers/HateoasResponseParser.ts",
        "Auth/BasicAuth.ts",
        "Auth/KeycloakApiDecorator.ts",
        "spec/mocks/MockDataRepository.ts",
        "spec/service/apiAccount.e2e.spec.ts",
        "spec/service/apiAccountEntryService.e2e.spec.ts",
        "spec/service/apiAccountEntryService.spec.ts",
        "typings/index.d.ts",
        "customTypings/typings.d.ts"
    ]
}
